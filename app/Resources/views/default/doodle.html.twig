{% extends 'base.html.twig' %}

{% block body %}
        <div class="nav">
            <div class="container">
                <div class="row">
                    <span class="big-title col-md-8">Bacon<span class="doodle">Doodle!</span></span>

                    <div class="nav-menu col-md-4">
                        <div><a href="#">Home</a></div>
                        <div><a href="#">Signup</a></div>
                        <div><a href="#">Login</a></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row canvas-row">
            <div class="canvas">
                <canvas id="bacon-canvas"></canvas>
                <div class="clear-canvas">Clear</div>
            </div>
        </div>

        <div class="row row-centered controls-row animate">
            <div class="new-doodle col-md-12 col-centered">New Doodle</div>

            <div class="controls col-md-6 col-centered hidden">
                <input class="color">
                <div id="color-icon" class="control-icon">
                    <img src="{{  asset('bundles/BaconDoodle/Resources/public/img/palette.png') }}">
                </div>

                <select class="stroke-size">
                    <option value="1">Small</option>
                    <option value="5">Medium</option>
                    <option value="10">Large</option>
                </select>

                <div id="stroke-size-icon" class="control-icon">
                    <i class="fa fa-paint-brush"></i>
                </div>

                <div class="choose-background">
                    <i class="fa fa-long-arrow-left background-prev"></i>
                    <span>Background</span>
                    <i class="fa fa-long-arrow-right background-next"></i>
                </div>
            </div>

            <div class="doodle-form col-md-6 col-centered hidden">
                <div class="inner-title right">Save Doodle</div>

                {{  form_start(form) }}
                {{ form_errors(form) }}

                {{ form_row(form.author) }}
                {{ form_row(form.title) }}
                {{  form_end(form) }}
            </div>
        </div>

        <div class="row doodles-row row-centered">
            <div id="prev-doodles">Previous Doodles</div>

            {% for entry in data.entries %}
                <div class="entry col-md-4 col-centered">
                    <div class="doodle-icons">
                        <div class="doodle-comments-new"><i class="fa fa-pencil-square-o"></i></div>
                        <div class="doodle-comments"><i class="fa fa-comment-o"></i><span>2</span></div>
                    </div>
                    <div class="doodle-id">{{ entry.id }}</div>
                    <div class="doodle-pic"><img src="{{ entry.data }}"></div>
                    <div class="entry-title">{{ entry.title }}</div>
                    <div class="author-date">
                        <div class="author">{{ entry.author }}</div>
                        <div class="created">{{ entry.created|date("m/d/Y") }}</div>
                    </div>
                </div>
            {% endfor %}
        </div>
{% endblock %}