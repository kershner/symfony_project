{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="title">Bacon<span class="doodle">Doodle!</span></div>

    <div class="bacon-img">
        <img src="http://www.kershner.org/static/images/bacon6.jpg">
